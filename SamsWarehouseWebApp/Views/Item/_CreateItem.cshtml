@model SamsWarehouseWebApp.Models.Data.Item


<div class="row">
    <div class="col">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="ItemName" class="control-label"></label>
                <textarea cols="50" rows="4" asp-for="ItemName" minlength="" class="form-control"></textarea>
                <span asp-validation-for="ItemName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Unit" class="control-label"></label>
                <textarea cols="40" rows="4" asp-for="Unit" class="form-control"></textarea>
                <span asp-validation-for="Unit" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="UnitPrice" class="control-label"></label>
                <textarea cols="40" rows="4" asp-for="UnitPrice" class="form-control"></textarea>
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary" id="btnCreate">
                    Create
                </button>
            </div>
        </form>
    </div>
</div>



